<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <fieldset>
        <legend>Edit my profile</legend>
        <%= form_for :user, url: '/users/update', :method => :put do |form| %>
            <div class='form-group row'>
              <%= form.label :username, 'Username:' %>
              <%= form.text_field :username, class: 'form-control' %>
            </div>
            <div class='form-group row'>
              <%= form.label :email, 'Email:' %>
              <%= form.text_field :email, class: 'form-control' %>
            </div>
            <div class='form-group row'>
              <%= form.label :password, 'Password:' %>
              <%= form.password_field :password, class: 'form-control' %>
            </div>
            <div class='form-group row'>
              <%= form.label :confirm_password, 'Confirm password:' %>
              <%= form.password_field :confirm_password, class: 'form-control' %>
            </div>
            <div class='form-group row'>
              <%= form.label :type , 'I want to register a' %>
              <%= form.select :type, options_for_select([ 'Person', 'School', 'Company', 'Band', 'Movie', 'TV Show' ]), {}, class: 'form-control' %>
            </div>
            <div class='form-group row'>
              <!-- TODO change to form action -->
              <!--%= submit_tag 'Register', class: 'btn btn-default pull-right' %-->
              <%= link_to 'Save changes', feed_path, class: 'btn btn-default pull-right' %>
            </div>
        <% end %>
      </fieldset>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>